    "\n",
    "    a = float(input(\"Enter a: \"))\n",
    "    b = float(input(\"Enter b: \"))\n",
    "\n",
    "    # Get the operator from the user\n",
    "    opr = input(\"Enter the operator (+, -, /, *, %, or 'exit' to quit): \")\n",
    "\n",
    "    if opr == '+':\n",
    "        sum=a+b\n",
    "        print(\"The sum of\",a,\"+\",b,\"=\",sum)\n",
    "    elif opr == '-':\n",
    "        difference=a-b\n",
    "        print(\"The difference of\",a,\"-\",b,\"=\",difference)\n",
    "    elif opr == '/':\n",
    "        quotient=a/b\n",
    "        if b == 0:\n",
    "            print(\"Division by zero is not allowed.\")\n",
    "        else:\n",
    "            print(\"The quotient of\",a,\"/\",b,\"=\",quotient)\n",
    "    elif opr == '*':\n",
    "        product=a*b\n",
    "        print(\"The product of\",a,\"*\",b,\"=\",product)\n",
    "    elif opr == '%':\n",
    "        remainder=a%b\n",
    "        print(\"The remainder of\",a,\"%\",b,\"=\",remainder)\n",
    "    else:\n",
    "        print(\"You entered an invalid operator.\")"
   ]
